@model Proptech.Models.Usuario_Propiedades

@{
    ViewBag.Title = "Editar Usuario_Propiedades";
}

<h2>Editar Usuario_Propiedades</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Información de Usuario_Propiedades</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.id_usuario_propiedad)

        <!-- Campo id_usuario con DropDownList -->
        <div class="form-group">
            @Html.LabelFor(model => model.id_usuario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.id_usuario, (SelectList)ViewBag.id_usuario, "Seleccione un usuario", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Campo id_propiedad con DropDownList -->
        <div class="form-group">
            @Html.LabelFor(model => model.id_propiedad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.id_propiedad, (SelectList)ViewBag.id_propiedad, "Seleccione una propiedad", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_propiedad, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Botón de guardar -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="mt-2">
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
