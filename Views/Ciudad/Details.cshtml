@model Proptech.Models.DTO.Ciudad

@{
    ViewBag.Title = "Detalles de la Ciudad";
}

<h2>Detalles de la Ciudad</h2>

<div class="card">
    <div class="card-header">
        Información de la Ciudad
    </div>
    <div class="card-body">
        <dl class="row">
            <!-- ID de la Ciudad -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.id_ciudad)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.id_ciudad)
            </dd>

            <!-- Nombre de la Ciudad -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.nombre_ciudad)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.nombre_ciudad)
            </dd>
        </dl>
    </div>
</div>

<div class="text-center">
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.id_ciudad }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
    </p>
</div>
