@model Proptech.Models.DTO.Propiedad

@{
    ViewBag.Title = "Detalles de la Propiedad";
}

<h2>Detalles de la Propiedad</h2>

<div class="card">
    <div class="card-header">
        Información de la Propiedad
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.id_propiedad)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.id_propiedad)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.nombre)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.direccion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.direccion)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.terreno)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.terreno)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ciudad)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ciudad)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.num_cuartos)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.num_cuartos)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.num_baños)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.num_baños)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.num_pisos)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.num_pisos)
            </dd>
        </dl>
    </div>
</div>

<div class="text-center">
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.id_propiedad }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
